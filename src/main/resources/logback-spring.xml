<configuration>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%highlight(%-4relative [%thread] [%X{user}] [%marker] %-5level %logger{35} -%kvp- %msg %n)</pattern>
        </encoder>
    </appender>

    <appender name="MyAppender" class="org.l5g7.mealcraft.logging.MealcraftFileAppender">
        <layout class="org.l5g7.mealcraft.logging.MealcraftLayout"/>
    </appender>

    <root level="info">
        <appender-ref ref="STDOUT" />
        <appender-ref ref="MyAppender" />
    </root>

</configuration>
